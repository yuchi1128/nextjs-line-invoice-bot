generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Invoice {
  id        Int      @id @default(autoincrement())
  userId    String
  recipient String
  amount    Int
  dueDate   DateTime
  message   String
  sentDate  DateTime @default(now())
  isPaid    Boolean  @default(false)
}

